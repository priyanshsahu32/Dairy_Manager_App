<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    android:elevation="6dp"
    android:background="@drawable/button_background"
    android:orientation="vertical"
    android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:visibility="visible"
            android:background="@drawable/card_background_gradient"
            android:padding="16dp">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roshan Sahu"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/customer_phNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7828582123"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/customer_name"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/dropdown_arrow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Dropdown Arrow"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp" />
                <LinearLayout
                    android:layout_below="@+id/dropdown_arrow"

                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:id="@+id/buttons_layout">

                        <ImageButton
                            android:id="@+id/add_extras_button"
                            android:layout_width="15dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:src="@drawable/add"
                            android:background="@drawable/button_background"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="8dp"
                            android:importantForAccessibility="yes"
                            android:contentDescription="Add Extras"/>

                        <ImageButton
                            android:id="@+id/no_supply_button"
                            android:layout_width="15dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:src="@drawable/nosupply"

                            android:background="@drawable/button_background"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="8dp"
                            android:importantForAccessibility="yes"
                            android:contentDescription="No Supply"/>

                        <ImageButton
                            android:id="@+id/edit_customer"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_edit_24"

                            android:background="@drawable/button_background"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="8dp"
                            android:importantForAccessibility="yes"
                            android:contentDescription="Edit"/>

                        <ImageButton
                            android:id="@+id/delete_customer"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:src="@drawable/delete_cust"

                            android:background="@drawable/button_background"
                            android:scaleType="centerInside"
                            android:importantForAccessibility="yes"
                            android:contentDescription="Delete"/>

                </LinearLayout>

        </RelativeLayout>



</RelativeLayout>
