<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Buffalo Logo -->
    <ImageView
        android:id="@+id/buffalo_logo"
        android:layout_width="151dp"
        android:layout_height="129dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Buffalo Logo"
        android:src="@drawable/cow_silhouette_svgrepo_com"
        android:layout_marginTop="80dp"/>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buffalo_logo"
        android:layout_centerHorizontal="true"
        android:text="Welcome to"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <!-- Sahu Dairy Text -->
    <TextView
        android:id="@+id/sahu_dairy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:text="Sahu Dairy"
        android:textColor="#000000"
        android:textSize="28sp"
        android:visibility="visible"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
